@{
    ViewData["Title"] = "Trạm sạc";
    var stations = ViewBag.Stations as List<EVChargingStation.Web.Models.StationDto> ?? new();
}

<div class="container py-3">
    <h4 class="mb-3 text-primary">
        <i class="fa fa-charging-station me-2"></i>Vị Trí Trạm Sạc
    </h4>

    <!-- Hiển thị thông báo -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row g-3">
        @foreach (var s in stations)
        {
            <div class="col-12 col-md-6 col-lg-4">
                <div class="card shadow-sm station-card">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <div class="fw-bold fs-5">@s.Name</div>
                                <div class="small text-muted">@s.Address</div>
                            </div>
                            <span class="badge bg-success">Hoạt động</span>
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <a href="https://www.google.com/maps/search/@s.Address" target="_blank" class="btn btn-outline-primary btn-sm">
                                <i class="fa fa-map-marker-alt me-1"></i>Chỉ đường
                            </a>

                            <!-- Nút đặt chỗ -->
                            
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>



<!-- Script xử lý modal -->
<script>
document.addEventListener("DOMContentLoaded", () => {
    const modal = document.getElementById("bookingModal");
    modal.addEventListener("show.bs.modal", function (event) {
        const button = event.relatedTarget;
        const stationId = button.getAttribute("data-station-id");
        const stationName = button.getAttribute("data-station-name");
        modal.querySelector("#stationId").value = stationId;
        modal.querySelector("#stationName").value = stationName;
    });
});
</script>

<style>
.station-card {
    transition: transform 0.2s, box-shadow 0.2s;
}
.station-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 0 15px rgba(0,0,0,0.1);
}
</style>
